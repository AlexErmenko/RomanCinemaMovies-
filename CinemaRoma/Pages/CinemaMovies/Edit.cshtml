@page
@model CinemaRoma.Pages.CinemaMovies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CinemaMovie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CinemaMovie.MovieId" />
            <input type="hidden" asp-for="CinemaMovie.CinemaId" />
            <div class="form-group">
                <label asp-for="CinemaMovie.DateStartRental" class="control-label"></label>
                <input asp-for="CinemaMovie.DateStartRental" class="form-control" type="date" />
                <span asp-validation-for="CinemaMovie.DateStartRental" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CinemaMovie.DateEndRental" class="control-label"></label>
                <input asp-for="CinemaMovie.DateEndRental" class="form-control" type="date" />
                <span asp-validation-for="CinemaMovie.DateEndRental" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
