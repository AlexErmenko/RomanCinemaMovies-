@page
@using CinemaRoma.Models
@model CinemaRoma.Pages.Actors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="table-responsive">


    <table id="table"
           class="table table-hover table-bordered table-dark text-center text-light"
           data-toggle="table"
           data-show-button-text="true"
           data-sortable="true"
           data-trim-on-search="false"
           data-search="true"
           data-show-search-clear-button="true"
           data-pagination="true"
           data-pagination-loop="true"
           data-page-list="[10, 25, 50, 100, 200, All]"
           data-buttons-class="primary"
           data-mobile-responsive="true"
           data-locale="ru-RU">

        <thead class="thead-light">
        <tr>
            <th data-sortable="true"
                scope="col">
                @Html.DisplayNameFor(model => model.Actor[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor[0].MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor[0].DateBirth)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (Actor item in Model.Actor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateBirth)
                </td>
                <td>
                    <a asp-page="./Edit"
                       asp-route-id="@item.Id"
                       >
                        Edit
                    </a> |
                    <a asp-page="./Details"
                       asp-route-id="@item.Id">
                        Details
                    </a> |
                    <a asp-page="./Delete"
                       asp-route-id="@item.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


<script src="lib/bootstrap-table/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>
<script src="lib/bootstrap-table/extensions/filter-control/bootstrap-table-filter-control.min.css"></script>


<script>
  $(function() {
    $('#table').bootstrapTable()
  })
</script>
