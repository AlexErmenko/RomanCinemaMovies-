@page
@model CinemaRoma.Pages.Actors.CreateModel

<h1>Добавление записи</h1>

<h4>Актёр</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Actor.FirstName" class="control-label"></label>
                <input asp-for="Actor.FirstName" class="form-control"/>
                <span asp-validation-for="Actor.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Actor.MiddleName" class="control-label"></label>
                <input asp-for="Actor.MiddleName" class="form-control"/>
                <span asp-validation-for="Actor.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Actor.LastName" class="control-label"></label>
                <input asp-for="Actor.LastName" class="form-control"/>
                <span asp-validation-for="Actor.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Actor.DateBirth" class="control-label"></label>
                <input asp-for="Actor.DateBirth" class="form-control"/>
                <span asp-validation-for="Actor.DateBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}